<div class="row main main-nav">
  {{link-to 'Grand Central Station' 'index' class='homeLink'}}
  <div class="row navLinksContainer">
    {{link-to 'Orders' 'sales-orders' class="salesOrders"}}
    {{link-to 'Purchases' 'purchase-orders' class="purchaseOrders"}}
    {{link-to 'Distribution' 'distribution' class="distribution"}}

    {{#ui/popup-menu icon='arrow_drop_down'}}
      {{#each popupItems as |item|}}
        {{ui/icon-button
          class=(camelize item.label)
          flat=true
          label=item.label
          size=1.4
          padding=1.2
          action=(action navigateToRoute item.route)}}
      {{/each}}
    {{/ui/popup-menu}}
  </div>
</div>

<div class="row user">
  {{#if authenticated}}

    <span class="buttonContent row">
      <span class="name">{{name}}</span>
      <span class="pipe">|</span>
      <a href="#" {{action (action this.attrs.logout)}}>
        <span class="buttonContent row">
          <span class="label">Logout</span>
        </span>
      </a>
    </span>

  {{else}}
    <a href="#" {{action (action this.attrs.login)}}>Login</a>
  {{/if}}

</div>
