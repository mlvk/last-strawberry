<div class="row center">
  {{ui/icon-button
    class='homeLink'
    flat=true
    label="MLVK"
    size=2
    padding=0.6
    action=(action "navigateToRoute" "sales-orders.index")}}

  <div class="row navLinksContainer">
    {{ui/icon-button
      class=(if (eq "sales-orders" nextRoute) "salesOrders active" "salesOrders")
      flat=true
      label="Sales"
      size=1.4
      padding=1.2
      action=(action "navigateToRoute" "sales-orders.index")}}

    {{ui/icon-button
      class=(if (eq "purchase-orders" nextRoute) "purchaseOrders active" "purchaseOrders")
      flat=true
      label="Purchases"
      size=1.4
      padding=1.2
      action=(action "navigateToRoute" "purchase-orders.index")}}

    {{ui/icon-button
      class=(if (eq "distribution" nextRoute) "distribution active" "distribution")
      flat=true
      label="Distribution"
      size=1.4
      padding=1.2
      action=(action "navigateToRoute" "distribution")}}

    {{#ui/popup-menu label="Settings" icon='arrow_drop_down'}}
      {{#each settingMenuItems as |item|}}
        {{ui/icon-button
          class=(camelize item.route)
          iconName="check"
          flat=true
          label=item.label
          size=1.4
          padding=1.2
          iconName=item.icon
          action=(action navigateToRoute item.route)}}
      {{/each}}
    {{/ui/popup-menu}}
  </div>
</div>

<div class="row">
  {{#if authenticated}}
    <span class="row baseline">
      <span class="name">{{name}}</span>
      <a href="#" {{action logout}}>
        <span class="label">Logout</span>
      </a>
    </span>
  {{else}}
    <a href="#" {{action login}}>Login</a>
  {{/if}}
</div>
